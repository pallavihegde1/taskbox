<table border="1" id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
  	 <tr>
  	  <thead>
  	    <th> #</th>
  	    <th> Name </th>
  	    <th> Company</th>
  	    
  	    <th> No of projects</th>
       </thead>
       </tr>

       <% @clients.each_with_index do |client,index| %>
        <tr>
          <td><%= index + 1%></td>
          <td><%=  link_to client.name, client_url(client.id) %> </td>  <!-- client_path with id for show action-->
          <td><%= client.company %> </td>
          
          <td><%= client.projects.size %></td>
        </tr>
        <% end %>
        </table>