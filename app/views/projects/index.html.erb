<h3 class="text-center"> Listing Projects </h3>
<strong> filter by :</strong>
<% for client in current_user.clients %>
<%= link_to client.name,projects_path(client_id: client.id) %> |
<% end %>
<table border="1" id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
<tr>
<thead>
  <th> Name </th>
  <th> Status </th>
  <th>Start_date </th>
  <th> Client </th>
</thead>
</tr>
<tbody>
  <% for project in @projects %>
  <tr>
    <td><%=link_to project.name, project_path(project.id) %> </td>
    <td><%= project.status %> </td>
    <td><%= project.start_date %> </td>
    <td><%= project.client.try(:name) %> </td>
    </tr>
    <% end %>
</tbody>
</table>


<%= link_to "Add project" , new_project_path , class:'btn btn-info'%>